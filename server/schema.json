{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Air Tag Along",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "event_name": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        }
      },
      "travel_date": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      },
      "departure_airport": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      },
      "destination": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      },
      "additional_note": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      }
    },
    "required": ["_id", "event_name", "travel_date", "departure_airport", "destination"]
  }
}